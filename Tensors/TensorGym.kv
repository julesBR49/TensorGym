    background_checkbox_down: '/Users/reaghbruce-robertson/PycharmProjects/Tensors/checkbox_down.png'

<InfoPop>:
    on_open: root.reinitialize_text()
    auto_dismiss: False
    size_hint: None, None
    size: '495dp', '515.9dp'
    background_color: 0.9, 0.9, 0.9, 0.5

    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Rectangle:
                source:"/Users/reaghbruce-robertson/PycharmProjects/Tensors/white_background.png"
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'


            FloatLayout:
                size_hint_y: 0.04

                CloseButton:
                    pos_hint: {"right": 1, "top": 1}
                    on_press: root.dismiss()

            BoxLayout:
                orientation: 'horizontal'
                padding: '15dp'
                size_hint_y: 0.96

                canvas.before:
                    Rectangle:
                        source: root.text
                        pos: self.pos
                        size: self.size
<ExceptPop>:
    on_open: root.reinitialize_text()
