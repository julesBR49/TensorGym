#:import CheckBox kivy.uix.checkbox
#:import Label kivy.uix.label
#:import Factory kivy.factory.Factory


<CustomLabel@Label>
    color: 0.6, 0.6, 0.6, 1
    text_size: self.size
    font_size: '14dp'
    font_name: '/Users/reaghbruce-robertson/PycharmProjects/Tensors/candara.ttf'
    halign: 'left'
    valign: 'middle'

<InfoLabel@Label>
    color: 0.6, 0.6, 0.6, 1
    text_size: self.size
    font_size: '12dp'
    font_name: '/Users/reaghbruce-robertson/PycharmProjects/Tensors/candara.ttf'
    halign: 'left'
    valign: 'top'


<CustomButton@Button>:
