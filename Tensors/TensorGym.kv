<MssgPop>:
    auto_dismiss: False
    size_hint: None, None
    size: '380dp', '250dp'
    background_color: 0.9, 0.9, 0.9, 0.5

    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Rectangle:
