                    font_size: '14dp'
                    font_name: '/Users/reaghbruce-robertson/PycharmProjects/Tensors/candara.ttf'
                    halign: 'center'
                    valign: 'middle'

ActionChoices:

<ActionChoices>:
    id: action_choices
    orientation: 'vertical'
    height: self.minimum_height
    latex_text_input: latex_input
    latex_text_output: latex_output
    term_to_factor_str: input_term_to_factor
    term_to_replace_str: term_to_replace
    replacement_term_str: replacement_term
    indices_to_replace_str: indices_to_replace
    replacement_indices_str: replacement_indices
    symmetric_tensors_str: symmetric_tensors
    spacing: '10dp'
    padding: '12dp'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.2

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 1

        TextInput:
            id: latex_input
            font_name: '/Users/reaghbruce-robertson/PycharmProjects/Tensors/candara.ttf'
            hint_text: "LaTeX equation input:"
            font_size: '13dp'
            multiline: True
            size_hint: .9, 0.95

        InfoButton:
            size_hint: .07, 1
            on_release: root.open_pop("/Users/reaghbruce-robertson/PycharmProjects/Tensors/input_specifications.png")


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 1

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.46

            BoxLayout:
                orientation: 'horizontal'

                MyCheckBox:
                    id: 'initial_equation'
                    on_active: root.clicked_include_eq(self.active)
                    size_hint_x: 0.2

                CustomLabel:
                    text: "include initial equation in output?"
                    size_hint_x: .80
            BoxLayout:
                orientation: 'horizontal'

                MyCheckBox:
                    id: 'words'
                    on_active: root.clicked_include_text(self.active)
                    size_hint_x: 0.2

                CustomLabel:
                    text: "include short description in output?"
                    size_hint_x: .80

        TextInput:
            id: symmetric_tensors
            font_name: '/Users/reaghbruce-robertson/PycharmProjects/Tensors/candara.ttf'
            hint_text: "(optional) comma-separated list of symmetric tensor symbols (eg. h, T)"
            font_size: '13dp'
            multiline: True
            size_hint: .47, 1
            valign: 'middle'

        InfoButton:
            size_hint: .07, 0.95
            on_release: root.open_pop("/Users/reaghbruce-robertson/PycharmProjects/Tensors/input_customization.png")

    BoxLayout:
        orientation: "horizontal"
        size_hint_y: 0.1

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 2.3

        canvas.before:
            Rectangle:
                source:"/Users/reaghbruce-robertson/PycharmProjects/Tensors/multiply_corner.png"
